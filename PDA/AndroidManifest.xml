        <activity
            android:name="com.david.pda.TestDrawableActivity"
            android:theme="@android:style/Theme.Holo.Light.NoActionBar" >
        </activity>
        <activity
            android:name="com.david.pda.SomeToolsCountdownActivity"
            android:theme="@android:style/Theme.Holo.Light.NoActionBar" >
        </activity>
        <activity
            android:name="com.david.pda.WelcomeActivity"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <provider
            android:name="com.david.pda.sqlite.privider.ModelProvider"
            android:authorities="com.david.pda.model" />
    </application>

</manifest>